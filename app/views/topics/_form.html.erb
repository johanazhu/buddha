
<%= form_for @topic do |f| %>

    <% if @topic.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@topic.errors.count, "error") %> 
                禁止保存此主题
            </h2>
            <ul>    
                <% @topic.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :content %>
        <%= f.text_area :content %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
